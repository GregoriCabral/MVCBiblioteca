@model List<Reserva>

<table class="table">
    <thead>
          <tr>
            <th scope="col">Livro</th>
            <th scope="col">Pessoa</th>
            <th scope="col">Quando</th>
            <th scope="col">Devolução</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach(Reserva reserva in Model)
            {
                <tr>
                    <td>@reserva.Livro</td>
                    <td>@reserva.Pessoa</td>
                    <td>@reserva.Quando</td>
                    <td>@reserva.Devolucao</td>

                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Reserva" asp-action="Editar" asp-route-id="@reserva.Id">Editar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="text-content">
    <a class="btn btn-primary" type="button" asp-controller="Reserva" asp-action="AdicionarReserva">Adicionar Reserva</a>
</div>